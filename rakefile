require 'rubygems'
gem 'inochi', '~> 1'
require 'inochi'

Inochi.init :Dfect,
  :version => '0.1.0',
  :release => '2009-04-28',
  :website => 'http://snk.tuxfamily.org/lib/dfect',
  :tagline => 'Assertion testing library for Ruby'

Inochi.rake :Dfect,
  :test_with         => :dfect,
  :rubyforge_project => 'sunaku',
  :upload_target     => File.expand_path('~/www/lib/dfect/'),
  :upload_delete     => true,
  :inochi_consumer   => false
